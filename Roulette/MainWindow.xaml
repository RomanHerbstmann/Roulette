<!--Region Window initial-->
<Window x:Class="Roulette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Roulette"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1080" 
        Width="1920"
        Background="#2d2d2d"
        WindowStartupLocation="CenterScreen"    
        WindowStyle="None"
        WindowState="Maximized">
    <!--Endregion-->
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <!--Region RowDefinition-->
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <!--Endregion-->
        <!--Region User Information-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,4,0,0">
            <Label Content="Benutzernummer:" Foreground="White" FontWeight="DemiBold" FontSize="30"></Label>
            <Label Content="{Binding LoggedInUserID}" Foreground="White" FontWeight="DemiBold" FontSize="30"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
            <Label Content="Guthaben" Foreground="White" FontWeight="DemiBold" FontSize="30"></Label>
            <Label Content="{Binding LoggedInUserMoney}" Foreground="White" FontWeight="DemiBold" FontSize="30" ContentStringFormat="{}{0} €"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,10,0">
            <Label Content="Benutzername:" Foreground="White" FontWeight="DemiBold" FontSize="30"></Label>
            <Label Content="{Binding LoggedInUsername}" Foreground="White" FontWeight="DemiBold" FontSize="30"></Label>
        </StackPanel>
        <!--Endregion-->
        <!--Region btnStart-->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Label FontSize="30" Background="Transparent" FontWeight="DemiBold" BorderThickness="0" HorizontalAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UserWins}" Value="true">
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="Content" Value="Gewonnen !!"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding UserWins}" Value="false">
                                <Setter Property="Foreground" Value="Red"/>
                                <Setter Property="Content" Value="Verloren !!"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding WinnerField}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Button Height="50" Width="200" Content="Neue Runde" Background="Transparent" Foreground="White" FontSize="30" FontWeight="DemiBold" Command="{Binding btnStartClickCommand}" BorderThickness="0"></Button>
        </StackPanel>
        <!--Endregion-->
        <!--Region User selection-->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="White" BorderThickness="1" Width="200" Height="100" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="40*"/>
                        </Grid.RowDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▲" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnLowNumbersMoreMoneyCommand}"></Button>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Label Content="{Binding LowNumbersMoneySet}" Background="Transparent" Foreground="White" FontSize="30"></Label>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▼" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnLowNumbersLessMoneyCommand}"></Button>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Niedrig 1-18" Foreground="White" FontWeight="DemiBold" FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderBrush="White" BorderThickness="1" Width="200" Height="100" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="40*"/>
                        </Grid.RowDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▲" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnOddNumbersMoreMoneyClickCommand}"></Button>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Label Content="{Binding OddNumbersMoneySet}" Background="Transparent" Foreground="White" FontSize="30"></Label>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▼" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnOddNumbersLessMoneyClickCommand}"></Button>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Ungerade" Foreground="White" FontWeight="DemiBold" FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderBrush="White" BorderThickness="1" Width="200" Height="100" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="40*"/>
                        </Grid.RowDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▲" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnAllRedNumbersMoreMoneyCommand}"></Button>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Label Content="{Binding AllRedNumbersMoneySet}" Background="Transparent" Foreground="White" FontSize="30"></Label>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Content="▼" Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btnAllRedNumbersLessMoneyCommand}"></Button>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Rot" Foreground="White" FontWeight="DemiBold" FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="-50,50,0,0">
                <Border BorderBrush="White" BorderThickness="1" Width="200" Height="100" CornerRadius="5" Margin="5" RenderTransformOrigin="0.5,0.5" Background="Red">
                    <Border.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="40*"/>
                        </Grid.RowDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btn3MoreMoneyClickCommand}">
                                    <TextBlock Text="▲" RenderTransformOrigin="0.5,0.5">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Button>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Label Content="{Binding Number3MoneySet}" Background="Transparent" Foreground="White" FontSize="30"></Label>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                                <Button Background="Transparent" Foreground="White" FontSize="30" Command="{Binding btn3LessMoneyClickCommand}">
                                    <TextBlock Text="▼" RenderTransformOrigin="0.5,0.5">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Button>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="3" Foreground="White" FontWeight="DemiBold" FontSize="20" RenderTransformOrigin="0.5,0.5"></TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
